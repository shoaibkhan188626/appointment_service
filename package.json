{
  "name": "appointment-service",
  "version": "1.0.0",
  "description": "Microservice for managing appointments in the healthcare ecosystem, integrated with User, Hospital, and Notification Services.",
  "type": "module",
  "main": "server.js",
  "scripts": {
    "dev": "nodemon server.js",
    "start": "node server.js",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "build": "npm run lint && npm run format",
    "docker:build": "docker build -t appointment-service .",
    "docker:run": "docker-compose up -d"
  },
  "dependencies": {
    "axios": "^1.0.0",
    "dotenv": "^16.0.0",
    "express": "^4.18.2",
    "express-rate-limit": "^6.0.0",
    "helmet": "^6.0.0",
    "joi": "^17.0.0",
    "jsonwebtoken": "^9.0.0",
    "mongoose": "^7.0.0",
    "prom-client": "^15.1.3",
    "uuid": "^9.0.0",
    "winston": "^3.0.0"
  },
  "devDependencies": {
    "eslint": "^8.0.0",
    "eslint-config-standard": "^17.0.0",
    "eslint-plugin-import": "^2.0.0",
    "eslint-plugin-node": "^11.0.0",
    "eslint-plugin-promise": "^6.0.0",
    "jest": "^29.0.0",
    "mongodb-memory-server": "^8.0.0",
    "nodemon": "^3.0.0",
    "prettier": "^3.0.0",
    "supertest": "^6.0.0"
  },
  "author": "Shoaib Khan",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/shoaibkhan188626/appointment-service.git"
  },
  "keywords": [
    "healthcare",
    "appointment",
    "microservice",
    "node.js",
    "express",
    "mongodb",
    "NDHM",
    "DPDP",
    "telemedicine"
  ]
}
